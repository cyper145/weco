<h3 class="leftpanel-section section-caption center-aligned">Selected dates</h3>
@Html.DevExpress().DateNavigator(prueba4.Model.SchedulerHelper.Settings).Bind(Model.Appointments, Model.Resources).GetHtml()
<h3 class="section-caption">Resources:</h3>
@Html.DevExpress().ListBox(listBoxSettings =>
{
    listBoxSettings.Name = "resourcesListBox";

    listBoxSettings.Properties.TextField = "Name";
    listBoxSettings.Properties.ValueField = "Id";
    listBoxSettings.Properties.ValueType = typeof(Int64);

    listBoxSettings.Properties.SelectionMode = ListEditSelectionMode.CheckColumn;
    listBoxSettings.Properties.EnableSelectAll = true;

    listBoxSettings.Width = Unit.Percentage(100);
    listBoxSettings.Height = Unit.Pixel(332);
    listBoxSettings.ControlStyle.CssClass = "resources-listbox";

    listBoxSettings.Properties.ClientSideEvents.SelectedIndexChanged = "onResourcesListBoxSelectedIndexChanged";

    listBoxSettings.PreRender = (sender, args) =>
    {
        ((MVCxListBox)sender).SelectAll();
    };
}).BindList(Model.Resources).GetHtml()


@Html.DevExpress().TreeView(settings =>
{
    settings.Name = "TreeView";
    settings.AllowSelectNode = false;

        settings.Nodes.Add(node =>
    {
        node.Text = "Node 0";
        node.Nodes.Add(subNode =>
        {
            subNode.Text = "SubNode 0";
            subNode.Nodes.Add("SubSubNode 0");
            subNode.Nodes.Add("SubSubNode 0");
        });
        node.Nodes.Add("SubNode 1");
    });
    settings.Nodes.Add("Node 1");
    }).GetHtml()

